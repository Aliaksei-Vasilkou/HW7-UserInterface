<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/stories_content_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_nav_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/stories_control_panel"
            style="@style/light_grey_panels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_dim_4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_stories"
                style="@style/textColorBlack.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/medium_dim_8dp"
                android:layout_marginStart="@dimen/medium_dim_8dp"
                android:text="@string/text_view_stories_name"/>

            <LinearLayout
                android:id="@+id/text_view_watch_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/medium_dim_8dp"
                android:layout_marginRight="@dimen/medium_dim_8dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_dim_4dp"
                    android:layout_marginRight="@dimen/small_dim_4dp"
                    app:srcCompat="@drawable/ic_play_arrow_black_24dp"/>

                <TextView
                    style="@style/textColorBlack.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text_view_watch_all_name"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            style="@style/light_grey_panels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_1"
                    style="@style/card_style"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image_card_1"
                        style="@style/card_images_style"
                        android:src="@drawable/image">
                    </ImageView>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="-8dp"
                    android:text="Owner"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_2"
                    style="@style/card_style"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image_card_2"
                        style="@style/card_images_style"
                        android:src="@drawable/image">
                    </ImageView>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="-8dp"
                    android:text="Owner"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_3"
                    style="@style/card_style"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image_card_3"
                        style="@style/card_images_style"
                        android:src="@drawable/image">
                    </ImageView>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="-8dp"
                    android:text="Owner"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_4"
                    style="@style/card_style"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image_card_4"
                        style="@style/card_images_style"
                        android:src="@drawable/image">
                    </ImageView>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="-8dp"
                    android:text="Owner"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_5"
                    style="@style/card_style"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image_card_5"
                        style="@style/card_images_style"
                        android:src="@drawable/image">
                    </ImageView>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="-8dp"
                    android:text="Owner"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</merge>